{
    "manifest_version": 3,
    "name": "BetterCtrl_F",
    "description": "Summarize any webpage with a click of a button!",
    "version": "1.0.0",
    "content_security_policy": {
      "extension_pages": "script-src 'self' ; object-src 'self'"
    },
    "permissions": [
      "activeTab"
    ],
    "action": {
      "default_popup": "index.html",
      "default_icon": {
        "16": "icons/Icon-192.png",
        "32": "icons/Icon-512.png"
      }
    },
    "icons": {
      "16": "icons/Icon-192.png",
      "32": "icons/Icon-512.png"
      
    }
  }